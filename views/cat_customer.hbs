<!-- index.hbs -->
<h1>Cat Customer</h1>
<link rel="stylesheet" href="/css/style.css">

<div id="nav-placeholder"></div>
	  

      <script src="//code.jquery.com/jquery.min.js"></script>
      <script>
        $.get("../navbar.html", function(data){
        $("#nav-placeholder").replaceWith(data);
      });
      </script>

<table>
  <thead>
    <tr>
      <th>Cat ID</th>
      <th>Customer ID</th>
      <th></th>
    </tr>
  </thead>
{{#each cat_customers}}
  <tr>
    <td>{{cat_id}}</td>
    <td>{{customer_id}}</td>
    <td><button onclick="deleteCatCustomer({{this.cat_id}},{{this.customer_id}})">Delete</button></td>
  </tr>
{{/each}}
</table>

<br>
    <br>
    <caption>Add a new cat customer:</caption><br><br>
    <form id="add-cat-customer-form" method="POST" action="/add-cat-customer-form">
      <select name="input-cat" id="input-cat-ajax">
        <option value="">Select a Cat</option>
        {{#each cats}}
        <option value="{{this.cat_id}}">{{this.first_name}} {{this.last_name}}</option>
        {{/each}}
      </select>
       <select name="input-customer" id="input-customer-ajax">
        <option value="">Select a Customer</option>
        {{#each customers}}
        <option value="{{this.customer_id}}">{{this.first_name}} {{this.last_name}}</option>
        {{/each}}
      </select>
      <input type="submit">
    </form>