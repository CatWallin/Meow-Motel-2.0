<!-- index.hbs -->
<h1>Customers</h1>
<link rel="stylesheet" href="/css/style.css">

<div id="nav-placeholder"></div>
	  

      <script src="//code.jquery.com/jquery.min.js"></script>
      <script>
        $.get("../navbar.html", function(data){
        $("#nav-placeholder").replaceWith(data);
      });
      </script>

<p>Search for customers using the field below.</p>
<form id="search-customer-html" method='GET' action='/customers'>
    <label for="input-lname">Search by Last Name: </label>
    <input type="text" name="lname" id="input-lname-html-search">
    
    <input type="submit">
    <a href='/customers'><button>Reset</button></a>
</form>

<br><br>
<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
    </tr>
  </thead>
{{#each customers}}
  <tr>
    <td>{{first_name}}</td>
    <td>{{last_name}}</td>
  </tr>
{{/each}}
</table>
<br><br>
<form id="add-customer-form" method="POST" action="/add-customer-form">
<label for="input-first_name">First Name: </label>
<input type="text" name="input-first_name" id="input-first_name">
<label for="input-last_name">Last Name: </label>
<input type="text" name="input-last_name" id="input-last_name">
<input type="submit">
</form>

