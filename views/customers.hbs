<!-- index.hbs -->
<h1>Customers</h1>
<link rel="stylesheet" href="/css/style.css">

<div id="nav-placeholder"></div>
	  

      <script src="//code.jquery.com/jquery.min.js"></script>
      <script>
        $.get("../navbar.html", function(data){
        $("#nav-placeholder").replaceWith(data);
      });
      </script>

<form id='search_people' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Search customers for first name starting with:</label>
    <input id='first_name_search_string' type='text' name='first_name_search_string' value=''>
    <input type="button" value="Search" onclick="searchCustomerByFirstName()">
</form>
<br><br>
<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
    </tr>
  </thead>
{{#each customers}}
  <tr>
    <td>{{first_name}}</td>
    <td>{{last_name}}</td>
  </tr>
{{/each}}
</table>
<br><br>
<form id="add-customer-form" method="POST" action="/add-customer-form">
<label for="input-first_name">First Name: </label>
<input type="text" name="input-first_name" id="input-first_name">
<label for="input-last_name">Last Name: </label>
<input type="text" name="input-last_name" id="input-last_name">
<input type="submit">
</form>

