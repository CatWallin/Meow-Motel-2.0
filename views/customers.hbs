<!-- index.hbs -->
<h1>Customers</h1>
<link rel="stylesheet" href="/css/style.css">

<div id="nav-placeholder"></div>
	  

      <script src="//code.jquery.com/jquery.min.js"></script>
      <script>
        $.get("../navbar.html", function(data){
        $("#nav-placeholder").replaceWith(data);
      });
      </script>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Reservation ID</th>
    </tr>
  </thead>
{{#each customers}}
  <tr>
    <td>{{first_name}}</td>
    <td>{{last_name}}</td>
    <td>{{reservation_id}}</td>
  </tr>
{{/each}}
</table>

<form id="add-customer-form" method="POST" action="/add-customer-form">
<label for="input-first_name">First Name: </label>
<input type="text" name="input-first_name" id="input-first_name">
<label for="input-last_name">Last Name: </label>
<input type="text" name="input-last_name" id="input-last_name">
<input type="submit">
</form>

<p>To update a customer's name, input their first and last name below.</p>
<form id="update-customer-form-ajax">

    <label for="input-firstname">First Name: </label>
    <input type="text" id="fname" name="fname"><br><br>

    <label for="input-homeworld">Last Name: </label>
    <input type="text" id="lname" name="lname"><br><br>
    <input type="submit">

</form>

<script src="./js/update_customer.js"></script>