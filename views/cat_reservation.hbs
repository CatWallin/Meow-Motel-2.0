<!-- index.hbs -->
<h1>Cat Reservation</h1>
<link rel="stylesheet" href="/css/style.css">

<div id="nav-placeholder"></div>
	  

      <script src="//code.jquery.com/jquery.min.js"></script>
      <script>
        $.get("../navbar.html", function(data){
        $("#nav-placeholder").replaceWith(data);
      });
      </script>

<table>
  <thead>
    <tr>
      <th>Cat ID</th>
      <th>Reservation ID</th>
      <th></th>
    </tr>
  </thead>
{{#each cat_reservation}}
  <tr>
    <td>{{cat_id}}</td>
    <td>{{reservation_id}}</td>
    <td><button onclick="deleteCatReservation({{id}})">Delete</button></td>
  </tr>
{{/each}}
</table>

<p>To update a cat's reservation select their name from the drop-down menu on the left and their reservation from the drop down menu on the right</p>
<form id="update-cat-reservation-form-ajax">

    <label for="input-fullname">Full name: </label>
    <select name="input-fullname" id="mySelect">
        <option value="test">Select a Cat</option>
        {{#each data}}
        <option value="{{this.cat_id}}">{{this.first_name}} {{this.last_name}}</option>
        {{/each}}
    </select>

    <label for="input-reservation">Reservation: </label>
    <select name="input-reservation" id="input-reservation-update">
        <option>Select a Reservation</option>
        {{#each planets}}
        <option value="{{this.reservation_id}}">{{this.check_in}} {{this.check_out}}</option>
        {{/each}}
    </select>
    <input type="submit">

</form>

<br>
        <br>
        <caption>Add a new cat reservation:</caption><br><br>
        <form id="add-cat-reservation-form" method="POST" action="/add-cat-reservation-form">
          <select name="input-cat" id="input-cat-ajax">
            <option value="">Select a Cat</option>
            {{#each cats}}
            <option value="{{this.cat_id}}">{{this.first_name}} {{this.last_name}}</option>
            {{/each}}
          </select>
          <select name="input-reservation" id="input-reservation-ajax">
            <option value="">Select a Reservation</option>
            {{#each reservations}}
            <option value="{{this.reservation_id}}">{{this.check_in}} {{this.check_out}}</option>
            {{/each}}
          </select>
          <input type="submit">
        </form>

<script src="./js/update_cat_reservation.js"></script>


