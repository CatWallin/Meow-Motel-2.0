<!-- index.hbs -->
<h1>Rooms</h1>
<link rel="stylesheet" href="/css/style.css">

<div id="nav-placeholder"></div>
	  

      <script src="//code.jquery.com/jquery.min.js"></script>
      <script>
        $.get("../navbar.html", function(data){
        $("#nav-placeholder").replaceWith(data);
      });
      </script>

<table>
  <thead>
    <tr>
      <th>Room ID</th>
      <th>Clean</th>
      <th>Occupied</th>
      <th>Employee ID</th>
    </tr>
  </thead>
{{#each rooms}}
  <tr>
    <td>{{room_id}}</td>
    <td>{{clean}}</td>
    <td>{{occupied}}</td>
    <td>{{employee_id}}</td>
  </tr>
{{/each}}
</table>

<br>
        <br>
        <caption>Add a new room:</caption><br><br>
        <form id="add-room-form" method="POST" action="/add-room-form">
          <input type="checkbox" name="input-clean" id="input-clean" value="clean">
          <label for="clean"> The room is clean </label>
          <input type="checkbox" name="input-occupied" id="input-occupied" value="occupied">
          <label for="occupied"> The room is occupied </label>
          <select name="input-employee" id="input-employee-ajax">
            <option value="">Select an Employee</option>
            {{#each employees}}
            <option value="{{this.employee_id}}">{{this.first_name}}</option>
            {{/each}}
          </select>
          <input type="submit">
        </form>

